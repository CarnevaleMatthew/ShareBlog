<% layout('layouts/boilerplate') -%>

<h1 class="text-center">Info Page</h1>
<h2 class="text-center mb-5">
  <%= article.title %> - written by:
  <a href="/articles/user/<%= article.user._id %>"><%= name %></a>
</h2>

<div class="d-flex justify-content-around flex-wrap">
  <div>
    <img src="<%= article.image %> " class="img-fluid" alt="..." />
  </div>
  <div><%= stripTags(article.body) %></div>
</div>

<div class="d-flex justify-content-around flex-wrap mt-5">
  <a href="/articles"
    ><button class="btn btn-outline-info my-3">Return</button></a
  >
  <a href="/articles/<%= article.slug %>/edit"
    ><button class="btn btn-outline-success">Edit</button></a
  >
  <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-outline-danger my-3">Delete</button>
  </form>
</div>
