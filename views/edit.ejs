<% layout('layouts/boilerplate') -%> 

<h1 class="text-center mb-5">Edit Article</h1>


<form action="/articles/<%= article.id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" name="article[title]" required autocomplete="off" value="<%= article.title %> ">
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="text" class="form-control" id="image" name="article[image]" required autocomplete="off" value="<%= article.image %> ">
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Your description:</label>
                <textarea class="form-control" id="description" name="article[description]" rows="2" required><%= article.description %> </textarea>
              </div>
              <div class="mb-3">
                <label for="body" class="form-label">Your Entry:</label>
                <textarea class="form-control" id="body" name="article[body]" rows="5" required><%= stripTags(article.body) %> </textarea>
              </div>
              <button class="btn btn-outline-success mb-3" type="submit">Edit Article</button>
        </div>
    </div>
</form>